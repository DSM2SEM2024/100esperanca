// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/php
{
	"name": "Projeto Integrador - Visgo de Jaca",

	"image": "mcr.microsoft.com/devcontainers/php:1-8.2-bullseye",

	"features": {
		"ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
		"ghcr.io/swift-server-community/swift-devcontainer-features/sqlite:1": {},
		"ghcr.io/schlich/devcontainer-features/powerlevel10k:1": {},
		"ghcr.io/cirolosapio/devcontainers-features/alpine-php-composer:0": {
			"version": "2.7.9"
		},
		"ghcr.io/nils-geistmann/devcontainers-features/zsh:0": {
			"setLocale": true,
			"theme": "robbyrussell",
			"plugins": "git docker",
			"desiredLocale": "en_US.UTF-8 UTF-8"
		}
	},

	"customizations": {
        "vscode": {
            "extensions": [
                "bmewburn.vscode-intelephense-client",
                "felixfbecker.php-debug",
                "mehedidracula.php-namespace-resolver",
                "hakcorp.php-awesome-snippets"
            ]
        }
    },

	"forwardPorts": [
		8080
	],
	
	"mounts": [
        "source=${localWorkspaceFolder}/App/Database,target=/workspace/src/Database,type=bind,consistency=cached"
    ]
}
